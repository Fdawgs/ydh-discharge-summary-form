<div id="Clinical" class="tab-div">
    <div class="full-column">

        <div class="block">
            <label>
                <h3>Clinical Details</h3>
            </label>
        </div>

        <div class="block">
            <label>Reason For Admission:</label>
            <textarea class="input" id="clinical_admissionReason" name="clinical_admissionReason" cols="20" rows="4"
                spellcheck="true"><%- typeof clinical_admissionReason !== 'undefined' ? clinical_admissionReason : '' %></textarea>
        </div>

        <div class="block">
            <label>
                <h4>Diagnosis</h4>
            </label>
        </div>

        <div class="block">
            <label>Initial Diagnosis<sup class="required" title="Required">*</sup>:</label>
            <textarea class="input" id="clinical_initialPresentation" name="clinical_initialPresentation" cols="20" rows="4"
                spellcheck="true" required><%- typeof clinical_initialPresentation !== 'undefined' ? clinical_initialPresentation : '' %></textarea>
        </div>

        <div class="block">
            <label>Pre-existing Medical Conditions and Past Medical History:</label>
            <textarea class="input" id="clinical_preexistingConditions" name="clinical_preexistingConditions" cols="20" rows="4"
                spellcheck="true"><%- typeof clinical_preexistingConditions !== 'undefined' ? clinical_preexistingConditions : '' %></textarea>
        </div>

        <div class="block">
            <label>Significant Investigations And Procedures<sup class="required" title="Required">*</sup>:</label>
            <textarea class="input" id="clinical_significantInvestigations" name="clinical_significantInvestigations" cols="20" rows="4"
                spellcheck="true" required><%- typeof clinical_significantInvestigations !== 'undefined' ? clinical_significantInvestigations : '' %></textarea>
        </div>

        <div class="block">
            <label><a href="#" class=" info"
                    title="Include any details of consultant escalation plans entered onto SPN">&#9072; Course and
                    Management of Condition:</a></label>
            <textarea class="input" id="clinical_conditionManagement" name="clinical_conditionManagement" cols="20" rows="4"
                spellcheck="true"><%- typeof clinical_conditionManagement !== 'undefined' ? clinical_conditionManagement : '' %></textarea>
        </div>

        <div class="block">
            <label>Details of Outstanding Results and Investigations:</label>
            <textarea class="input" id="clinical_outstandingResults" name="clinical_outstandingResults" cols="20" rows="4"
                spellcheck="true"><%- typeof clinical_outstandingResults !== 'undefined' ? clinical_outstandingResults : '' %></textarea>
        </div>

        <div class="block">
            <label>Patient's Concerns, Expectations, and Wishes:</label>
            <textarea class="input" id="clinical_patientConcerns" name="clinical_patientConcerns" cols="20" rows="4"
                spellcheck="true"><%- typeof clinical_patientConcerns !== 'undefined' ? clinical_patientConcerns : '' %></textarea>
        </div>

        <div class="block">
            <label>Significant Events:</label>
            <textarea class="input" id="clinical_significantEvents" name="clinical_significantEvents" cols="20" rows="4"
                spellcheck="true"><%- typeof clinical_significantEvents !== 'undefined' ? clinical_significantEvents : '' %></textarea>
        </div>

        <div class="block">
            <label>Adverse Incidents:</label>
            <textarea class="input" id="clinical_adverseIncidents" name="clinical_adverseIncidents" cols="20" rows="4"
                spellcheck="true"><%- typeof clinical_adverseIncidents !== 'undefined' ? clinical_adverseIncidents : '' %></textarea>
        </div>

        <div class="block">
            <label>Final Observations:</label>
            <textarea class="input" id="clinical_finalObservations" name="clinical_finalObservations" cols="20" rows="4"
                spellcheck="true"><%- typeof clinical_finalObservations !== 'undefined' ? clinical_finalObservations : '' %></textarea>
        </div>

        <div class="block">
            <label>NEWS2 Score:</label>
            <input class="input" id="clinical_news2_score" name="clinical_news2_score" style="width: 10%" type="number" min="0" max="20"
                value="<%- typeof clinical_news2_score !== 'undefined' ? clinical_news2_score : '' %>">

        </div>

        <div class="block">
            <label>
                <h4>Falls</h4>
            </label>
        </div>

        <div class="block">
            <label>Has a falls assessment for the patient taken place?:</label>
            <select class="binaryinput" id="clinical_fallsAssessment" name="clinical_fallsAssessment">
                <%  const clinicalFallsAssessmentOption = ['', 'No', 'Yes'];
                    for (let i = 0; i < clinicalFallsAssessmentOption.length; i += 1) {
                        let attributes;

                        if (typeof clinical_fallsAssessment !== 'undefined' && clinical_fallsAssessment === clinicalFallsAssessmentOption[i]) {
                            attributes = 'selected';
                        } else {
                            attributes = '';
                        }
                %>
                <option value="<%=clinicalFallsAssessmentOption[i]%>" <%-attributes%>>
                    <%=clinicalFallsAssessmentOption[i]%>
                </option>
                <%
                    }
                %>
            </select>
        </div>

        <div class="block">
            <label>
                <h4>Acute Kidney Injury</h4>
            </label>
        </div>

        <div class="block">
            <label>Has the patient suffered an Acute Kidney Injury (AKI)?:</label>
            <select class="binaryinput" id="clinical_aki" name="clinical_aki">
                <%  const clinicalAkiOption = [
                        {
                            value: '',
                            option: '',
                            attributes: 'onclick="hideClass(\'clinical-aki-div\'); unselect(\'clinical-aki-input\'); clearValue(\'clinical-aki-textarea\');"'
                        },
                        {
                            value: 'No',
                            option: 'No',
                            attributes: 'onclick="hideClass(\'clinical-aki-div\'); unselect(\'clinical-aki-input\'); clearValue(\'clinical-aki-textarea\');"'
                        },
                        {
                            value: 'Yes',
                            option: 'Yes',
                            attributes: 'onclick="showClass(\'clinical-aki-div\',\'block\');"'
                        }
                    ];

                    for (let q = 0; q < clinicalAkiOption.length; q += 1) {
                        let attributes;

                        if (typeof clinical_aki !== 'undefined' && clinical_aki === clinicalAkiOption[q].value) {
                            attributes = `${clinicalAkiOption[q].attributes} selected`;
                        } else {
                            attributes = clinicalAkiOption[q].attributes;
                        }
                %>
                <option value="<%=clinicalAkiOption[q].value%>" <%-attributes%>><%=clinicalAkiOption[q].option%>
                </option>
                <%
                    }
                %>
            </select>
        </div>

        <div class="clinical-aki-div block">
            <label><a target="_blank" rel="noreferrer noopener"
                    href="https://www.thinkkidneys.nhs.uk/kquip/tools/restart-drugs-stopped-aki/">Think Kidneys
                    Guidance</a></label> <br>
            <label><a target="_blank" rel="noreferrer noopener"
                    href="https://www.nice.org.uk/guidance/cg182/chapter/1-recommendations#frequency-of-monitoring-2">NICE
                    CKD182 Guidance on follow-up</a></label>
        </div>

        <div class="clinical-aki-div block">
            <label>AKI Present on admission?:</label>
            <select class="clinical-aki-input binaryinput" id="clinical_akiPresent" name="clinical_akiPresent">
                <%  const clinicalAkiPresentOption = ['', 'No', 'Yes'];
                    for (let r = 0; r < clinicalAkiPresentOption.length; r += 1) {
                        let attributes;

                        if (typeof clinical_akiPresent !== 'undefined' && clinical_akiPresent === clinicalAkiPresentOption[r]) {
                            attributes = 'selected';
                        } else {
                            attributes = '';
                        }
                %>
                <option value="<%=clinicalAkiPresentOption[r]%>" <%-attributes%>><%=clinicalAkiPresentOption[r]%>
                </option>
                <%
                    }
                %>
            </select>
        </div>

        <div class="clinical-aki-div block">
            <label>AKI Hospital acquired?:</label>
            <select class="clinical-aki-input binaryinput" id="clinical_akiHospital" name="clinical_akiHospital">
                <%  const clinicalAkiHospitalOption = ['', 'No', 'Yes'];
                    for (let s = 0; s < clinicalAkiHospitalOption.length; s += 1) {
                        let attributes;

                        if (typeof clinical_akiHospital !== 'undefined' && clinical_akiHospital === clinicalAkiHospitalOption[s]) {
                            attributes = 'selected';
                        } else {
                            attributes = '';
                        }
                %>
                <option value="<%=clinicalAkiHospitalOption[s]%>" <%-attributes%>><%=clinicalAkiHospitalOption[s]%>
                </option>
                <%
                    }
                %>
            </select>
        </div>

        <div class="clinical-aki-div block">
            <label>Highest AKI Stage:</label>
            <select class="clinical-aki-input binaryinput" id="clinical_akiStage" name="clinical_akiStage">
                <%  const clinicalAkiStageOption = ['', 'Stage 1', 'Stage 2', 'Stage 3'];
                    for (let i = 0; i < clinicalAkiStageOption.length; i += 1) {
                        let attributes;

                        if (typeof clinical_akiStage !== 'undefined' && clinical_akiStage === clinicalAkiStageOption[i]) {
                            attributes = 'selected';
                        } else {
                            attributes = '';
                        }
                %>
                <option value="<%=clinicalAkiStageOption[i]%>" <%-attributes%>><%=clinicalAkiStageOption[i]%></option>
                <%
                    }
                %>
            </select>
        </div>

        <div class="clinical-aki-div block">
            <label>Confirm a medication review has been undertaken for AKI:</label>
            <select class="clinical-aki-input binaryinput" id="clinical_akiMedReview" name="clinical_akiMedReview">
                <%  const clinicalAkiMedReviewOption = ['No', 'Yes'];
                    for (let i = 0; i < clinicalAkiMedReviewOption.length; i += 1) {
                        let attributes;

                        if (typeof clinical_akiMedReview !== 'undefined' && clinical_akiMedReview === clinicalAkiMedReviewOption[i]) {
                            attributes = 'selected';
                        } else {
                            attributes = '';
                        }
                %>
                <option value="<%=clinicalAkiMedReviewOption[i]%>" <%-attributes%>><%=clinicalAkiMedReviewOption[i]%>
                </option>
                <%
                    }
                %>
            </select>
        </div>


        <div class="block">
            <label>
                <h4>Advanced Care</h4>
            </label>
        </div>

        <div class="block">
            <label>Does the patient have a Do Not Attempt Resuscitation (DNAR) order in place?<sup class="required" title="Required">*</sup>:</label>
            <select class="binaryinput" id="clinical_dnar" name="clinical_dnar" required>
                <%  const clinicalDnarOption = [
                        {
                            value: '',
                            option: '',
                            attributes: 'onclick="hideClass(\'clinical-dnar-span\');"'
                        },
                        {
                            value: 'No',
                            option: 'No',
                            attributes: 'onclick="hideClass(\'clinical-dnar-span\');"'
                        },
                        {
                            value: 'Yes',
                            option: 'Yes',
                            attributes: 'onclick="showClass(\'clinical-dnar-span\',\'inline\');"'
                        }
                    ];

                    for (let q = 0; q < clinicalDnarOption.length; q += 1) {
                        let attributes;

                        if (typeof clinical_dnar !== 'undefined' && clinical_dnar === clinicalDnarOption[q].value) {
                            attributes = `${clinicalDnarOption[q].attributes} selected`;
                        } else {
                            attributes = clinicalDnarOption[q].attributes;
                        }
                %>
                <option value="<%=clinicalDnarOption[q].value%>" <%-attributes%>><%=clinicalDnarOption[q].option%>
                </option>
                <%
                    }
                %>
            </select>
            <span class="clinical-dnar-span"><b>Please ensure this is discharged with the patient and a copy left in the notes</b></span>
        </div>

        <div class="block">
            <label>Please summarise any advance care planning conversations and any Treatment Escalation Plan (TEP):</label>
            <textarea class="input" id="clinical_advancedCarePlanning" name="clinical_advancedCarePlanning" cols="20" rows="4"
                spellcheck="true"><%- typeof clinical_advancedCarePlanning !== 'undefined' ? clinical_advancedCarePlanning : '' %></textarea>
        </div>

        <div class="block">
            <label>Have anticipatory medications been included?<sup class="required" title="Required">*</sup>:</label>
            <select class="binaryinput" id="clinical_antmeds" name="clinical_antmeds" required>
                <%  const clinicalAntMedsOption = [
                        {
                            value: '',
                            option: '',
                            attributes: 'onclick="hideClass(\'clinical-mar-span\');"'
                        },
                        {
                            value: 'No',
                            option: 'No',
                            attributes: 'onclick="hideClass(\'clinical-mar-span\');"'
                        },
                        {
                            value: 'Yes',
                            option: 'Yes',
                            attributes: 'onclick="showClass(\'clinical-mar-span\',\'inline\');"'
                        }
                    ];

                    for (let q = 0; q < clinicalAntMedsOption.length; q += 1) {
                        let attributes;

                        if (typeof clinical_antmeds !== 'undefined' && clinical_antmeds === clinicalAntMedsOption[q].value) {
                            attributes = `${clinicalAntMedsOption[q].attributes} selected`;
                        } else {
                            attributes = clinicalAntMedsOption[q].attributes;
                        }
                %>
                <option value="<%=clinicalAntMedsOption[q].value%>" <%-attributes%>><%=clinicalAntMedsOption[q].option%>
                </option>
                <%
                    }
                %>
            </select>
            <span class="clinical-mar-span"><b>Please ensure a community Medication Administration Record (MAR) is included</b></span>
        </div>

    </div>
    <% include save_section.ejs %> </div>